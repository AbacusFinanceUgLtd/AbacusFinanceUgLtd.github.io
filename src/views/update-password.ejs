<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      rel="shortcut icon"
      type="image/x-icon"
      href="assets/img/logo/logo.jpeg"
    />
    <link rel="stylesheet" href="css/output.css" />
    <title>Update password</title>
  </head>
  <body
    class="relative bg-greyLight1 text-base transition-all overflow-x-hidden"
  >
    <!-- SIDEBAR SECTION START -->
    <%- include("./partials/sidebar");%>
    <!-- SIDEBAR SECTION END -->

    <div class="mmd:ml-64">
      <!-- HEADER SECTION START -->
      <header
        class="bg-greyLight1 z-20 sticky top-0 flex items-center justify-between shadow pb-5 pt-4 px-4 sm:px-8 md:px-16"
      >
        <span>UpdatePassword</span>
        <div class="flex items-center relative">
          <%- include("./partials/auth-user");%>
        </div>
      </header>
      <!-- HEADER SECTION END -->

      <!-- MAIN CONTENT START -->
      <main class="flex justify-center items-center my-12">
        <div class="mx-8 sm:mx-16 p-6 rounded w-full md:w-96 shadow">
          <% if(message){ %>
          <p class="error"><%= message%></p>
          <% } %>

          <h2 class="mb-4 text-lg font-semibold text-greyDark3">
            update your password
          </h2>
          <form
            action="<%= baseUrl %>/update-password"
            method="POST"
            class="form w-full"
          >
            <div class="flex flex-col justify-center mb-4">
              <label for="html" class="uppercase mb-2">Current password</label>
              <input
                type="password"
                name="currentPassword"
                placeholder="Enter current password"
                required
                class="input-field"
              />
            </div>
            <div class="flex flex-col justify-center mb-4">
              <label for="html" class="uppercase mb-2">New password</label>
              <input
                type="password"
                name="newPassword"
                placeholder="Enter new password"
                required
                class="input-field"
              />
            </div>
            <div class="flex flex-col justify-center mb-4">
              <label for="html" class="uppercase mb-2">current password</label>
              <input
                type="password"
                name="confirmNewPassword"
                placeholder="Re-type new password"
                required
                class="input-field"
              />
            </div>
            <button type="submit" class="submit-btn">update</button>
          </form>
        </div>
      </main>
      <!-- MAIN CONTENT END -->

      <!-- FOOTER SECTION START -->
      <%- include("./partials/footer")%>

      <!-- FOOTER SECTION END -->
    </div>

    <script src="./partials/sidebar.js"></script>
    <script src="./partials/auth-user.js"></script>
  </body>
</html>
